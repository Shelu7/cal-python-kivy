<MainWindow>
    name : "main"

    num_input: num_input
    md: md
    ce:ce
    cl: cl
    bs:bs
    svn:svn
    egt:egt
    nne:nne
    mulply:mulpy
    fr:fr
    fve:fve
    sx:sx
    plus:plus
    one:one
    two:two
    three:three
    mns:mns
    zr:zr
    dt:dt
    eql:eql
    dvsn:dvsn


    FloatLayout:
        cols: 1

        FloatLayout:
            size: root.width, root.height

            Label:
                text: "Calculator"
                font_size: (root.height**2 + root.height**2)/11**4
                pos_hint: {"x": 0.2, "y": 0.8}
                size_hint: 0.5, 0.2

            TextInput:
                id: num_input
                font_size: (root.width**2 + root.height**2)/13**4
                multiline: False
                pos_hint: {"x": 0.1, "y":0.7}
                size_hint: 0.8, 0.1

            Button:
                id: md
                pos_hint: {"x": 0.1, "y":0.6}
                size_hint: 0.2, 0.1
                background_color: 0, 0.6, 0.9, 1
                font_size: (root.width**2 + root.height**2)/13**4
                text: "%"
                on_release:
                    root.mod(md)

            Button:
                id: ce
                pos_hint: {"x": 0.3, "y":0.6}
                size_hint: 0.2, 0.1
                background_color: 0, 0.6, 0.9, 1
                font_size: (root.width**2 + root.height**2)/13**4
                text: "CE"
                on_release:


            Button:
                id: cl
                pos_hint: {"x": 0.5, "y":0.6}
                size_hint: 0.2, 0.1
                background_color: 0, 0.6, 0.9, 1
                font_size: (root.width**2 + root.height**2)/13**4
                text: "C"
                on_release:
                    root.reset()

            Button:
                id: bs
                pos_hint: {"x": 0.7, "y": 0.6}
                size_hint: 0.2, 0.1
                background_color: 0,0.6,0.9,1
                font_size: (root.width**2 + root.height**2)/13**4
                text: "<-"
                on_release:
                    root.backspace()

            Button:
                id: svn
                pos_hint: {"x": 0.1, "y":0.5}
                size_hint: 0.2, 0.1
                background_color: 0, 0.6, 0.9, 1
                font_size: (root.width**2 + root.height**2)/13**4
                text: "7"
                on_release:
                    root.seven()

            Button:
                id: egt
                pos_hint: {"x": 0.3, "y":0.5}
                size_hint: 0.2, 0.1
                background_color: 0, 0.6, 0.9, 1
                font_size: (root.width**2 + root.height**2)/13**4
                text: "8"
                on_release:
                    root.eight()

            Button:
                id: nne
                pos_hint: {"x": 0.5, "y":0.5}
                size_hint: 0.2, 0.1
                background_color: 0, 0.6, 0.9, 1
                font_size: (root.width**2 + root.height**2)/13**4
                text: "9"
                on_release:
                    root.nine()

            Button:
                id: mulpy
                pos_hint: {"x": 0.7, "y": 0.5}
                size_hint: 0.2, 0.1
                background_color: 0,0.6,0.9,1
                font_size: (root.width**2 + root.height**2)/13**4
                text: "X"
                on_release:
                    root.multiply(mulpy)

            Button:
                id: fr
                pos_hint: {"x": 0.1, "y":0.4}
                size_hint: 0.2, 0.1
                background_color: 0, 0.6, 0.9, 1
                font_size: (root.width**2 + root.height**2)/13**4
                text: "4"
                on_release:
                    root.four()

            Button:
                id: fve
                pos_hint: {"x": 0.3, "y":0.4}
                size_hint: 0.2, 0.1
                background_color: 0, 0.6, 0.9, 1
                font_size: (root.width**2 + root.height**2)/13**4
                text: "5"
                on_release:
                    root.five()

            Button:
                id: sx
                pos_hint: {"x": 0.5, "y":0.4}
                size_hint: 0.2, 0.1
                background_color: 0, 0.6, 0.9, 1
                font_size: (root.width**2 + root.height**2)/13**4
                text: "6"
                on_release:
                    root.six()

            Button:
                id: plus
                pos_hint: {"x": 0.7, "y": 0.4}
                size_hint: 0.2, 0.1
                background_color: 0,0.6,0.9,1
                font_size: (root.width**2 + root.height**2)/13**4
                text: "+"
                on_release:
                    root.add(plus)

            Button:
                id: one
                pos_hint: {"x": 0.1, "y":0.3}
                size_hint: 0.2, 0.1
                background_color: 0, 0.6, 0.9, 1
                font_size: (root.width**2 + root.height**2)/13**4
                text: "1"
                on_release:
                    root.onee(one)

            Button:
                id: two
                pos_hint: {"x": 0.3, "y":0.3}
                size_hint: 0.2, 0.1
                background_color: 0, 0.6, 0.9, 1
                font_size: (root.width**2 + root.height**2)/13**4
                text: "2"
                on_release:
