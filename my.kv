                text: "."
                on_release:
                    root.dot()

            Button:
                id: eql
                pos_hint: {"x": 0.5, "y":0.2}
                size_hint: 0.2, 0.1
                background_color: 0, 0.6, 0.9, 1
                font_size: (root.width**2 + root.height**2)/13**4
                text: "="
                on_release:
                    root.equal(eql)

            Button:
                id: dvsn
                pos_hint: {"x": 0.7, "y":0.2}
                size_hint: 0.2, 0.1
                background_color: 0, 0.6, 0.9, 1
                font_size: (root.width**2 + root.height**2)/13**4
                text: "/"
                on_release:
